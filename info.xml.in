<?xml version="1.0"?>
<module name="dynacase-bootstrap-installer" version="@VERSION@" release="@RELEASE@" basecomponent="no">

    <description>Bootstrap is a GUI library</description>

    <parameters>
        <param name="bootstrap" label="Twitter bootstrap download URL" type="text"
               volatile="yes" onupgrade="W"
               default="http://ftp.dynacase.org/third-party/bootstrap-2.3.2.zip"/>
    </parameters>

    <post-install>
        <download href="@bootstrap" action="programs/bootstrap_install">
            <label lang="en">Download and install bootstrap
            </label>
        </download>
    </post-install>

    <post-upgrade>
        <download href="@bootstrap" action="programs/bootstrap_install">
            <label lang="en">Download and install bootstrap
            </label>
        </download>
    </post-upgrade>

</module>
